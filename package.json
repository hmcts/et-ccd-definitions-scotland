{
  "name": "ccd-definition-processor",
  "version": "1.0.0",
  "description": "Utility to help creating Reform ET CCD definitions for Scotland",
  "dependencies": {
    "glob": "^7.2.0",
    "json-stringify-pretty-compact": "^3.0.0",
    "lodash": "^4.17.21",
    "matcher": "4.0.0",
    "minimist": "^1.2.6",
    "moment": "^2.29.2",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "xlsx": "^0.18.2",
    "xlsx-populate": "^1.21.0"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
    "eslint-plugin-mocha": "^10.0.3",
    "mocha": "^9.2.1"
  },
  "config": {
    "local": "http://host.docker.internal:8081",
    "demo": "http://et-cos-demo.service.core-compute-demo.internal",
    "aat": "http://et-cos-aat.service.core-compute-aat.internal",
    "prod": "http://et-cos-prod.service.core-compute-prod.internal"
  },
  "scripts": {
    "lint": "eslint src",
    "test": "mocha ./src/test --timeout 20000",
    "lint-fix": "eslint src --fix",
    "json2xlsx": "node ./bin/json2xlsx",
    "xlsx2json": "node ./bin/xlsx2json",
    "generate-json": "yarn xlsx2json -D ./definitions/json -i ./definitions/xlsx/ccd-config-base.xlsx && pretty-quick --pattern 'definitions/**/json/**.json'",
    "generate-excel-local": "ET_ENV=local CCD_DEF=$npm_package_config_local yarn run generate-excel -e *-prod.json",
    "generate-excel-demo": "ET_ENV=demo CCD_DEF=$npm_package_config_demo yarn run generate-excel -e *-prod.json",
    "generate-excel-aat": "ET_ENV=aat CCD_DEF=$npm_package_config_aat yarn run generate-excel -e *-prod.json",
    "generate-excel-prod": "ET_ENV=prod CCD_DEF=$npm_package_config_prod yarn run generate-excel -e *-nonprod.json",
    "generate-excel": "yarn json2xlsx -D ./definitions/json -o ./definitions/xlsx/et-scotland-ccd-config-${ET_ENV:-base}.xlsx",
    "generate-excel-all": "yarn generate-excel-local && yarn generate-excel-demo && yarn generate-excel-aat && yarn generate-excel-prod"
  }
}
